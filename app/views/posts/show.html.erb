<div class="container">
  <div class="row">
    <div class="span4 well" style="padding-bottom:0">
      <%= @post.title %><br>
      <%= @post.body %><br>
      <%= @post.user.email %>
      <% if current_user == @post.user %>
      <%= button_to 'So Delete', "/posts/#{@post.id}",
              method: :delete, data:
              { confirm: 'Much Shibe, Very Warn, Sure you want to delete?' },
              id: "delete-post-#{@post.id}", class: "btn btn-danger" %>
