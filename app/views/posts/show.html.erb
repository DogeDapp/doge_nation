<%= @post.title %><br>
<%= @post.body %>
<% if current_user == @post.user %>
  <%= button_to 'So Delete', "/posts/#{@post.id}",
          method: :delete, data:
          { confirm: 'Much Shibe, Very Warn, Sure you want to delete?' },
          id: "delete-post-#{@post.id}" %>
  <%= button_to 'Much Edit',
      edit_post_path(@post),
      method: :get, id: "edit-post-#{@post.id}" %>
<% end %>
<% @post.replies.each do |reply| %>
  <ul>
    <li><%= reply.body %></li>
    <% if reply.user == current_user %>
      <%= button_to 'Delete', reply_path(@post, reply),
        method: :delete, data:
        { confirm: 'Please confirm that you want to delete this review' },
        id: "delete-reply-#{reply.id}" %>

      <%= form_for [@post, reply], html:
        { id: "editing-reply-#{reply.id}" },
